{
  "name": "hellebore-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:db": "sqlite3 src-tauri/data/db.sqlite \"VACUUM;\" && sea-orm-cli migrate fresh -d src-tauri/migration",
    "build:entities": "pnpm build:db && sea-orm-cli generate entity -l --with-serde both -o src-tauri/entity/src",
    "build:fe": "tsc && vite build",
    "preview": "vite preview",
    "dev:fe": "vite",
    "dev:app": "env-cmd tauri dev",
    "rustfmt": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "rustfmt:check": "cargo fmt --manifest-path src-tauri/Cargo.toml --check",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm run eslint && pnpm run stylelint",
    "eslint": "eslint .",
    "stylelint": "stylelint **/*.css",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@mantine/core": "^7.13.0",
    "@mantine/hooks": "^7.13.0",
    "@mantine/tiptap": "^7.13.0",
    "@minoru/react-dnd-treeview": "^3.5.0",
    "@react-hook/resize-observer": "^2.0.2",
    "@tabler/icons-react": "3.18.x",
    "@tauri-apps/api": "^2.4.1",
    "@tauri-apps/plugin-dialog": "^2.2.1",
    "@tauri-apps/plugin-shell": "^2.2.1",
    "@tiptap/core": "^2.11.7",
    "@tiptap/extension-link": "^2.11.7",
    "@tiptap/extension-mention": "^2.11.7",
    "@tiptap/extension-placeholder": "^2.11.7",
    "@tiptap/pm": "^2.11.7",
    "@tiptap/react": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7",
    "@tiptap/suggestion": "^2.11.7",
    "clsx": "^2.1.1",
    "consolidated-events": "^2.0.2",
    "mobx": "^6.13.7",
    "mobx-react-lite": "^4.1.0",
    "prosemirror-model": "^1.25.0",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dom": "^18.3.1",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.1.0",
    "@types/consolidated-events": "^2.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "env-cmd": "^10.1.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "lint-staged": {
    "*.rs": "rustfmt --edition 2021",
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  }
}
