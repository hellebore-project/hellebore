{
  "name": "fantasy-log-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:fe": "vite",
    "build:fe": "tsc && vite build",
    "preview": "vite preview",
    "dev:app": "env-cmd tauri dev",
    "generate:entities": "sea-orm-cli generate entity -l --with-serde both -o src-tauri/entity/src",
    "rustfmt": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "rustfmt:check": "cargo fmt --manifest-path src-tauri/Cargo.toml --check",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm run eslint && pnpm run stylelint",
    "eslint": "eslint .",
    "stylelint": "stylelint **/*.css",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@mantine/core": "^7.12.1",
    "@mantine/hooks": "^7.12.1",
    "@mantine/tiptap": "^7.12.1",
    "@tabler/icons-react": "^3.12.0",
    "@tauri-apps/api": "^1.6.0",
    "@tiptap/core": "^2.6.4",
    "@tiptap/extension-link": "^2.6.4",
    "@tiptap/extension-mention": "^2.6.4",
    "@tiptap/pm": "^2.6.4",
    "@tiptap/react": "^2.6.4",
    "@tiptap/starter-kit": "^2.6.4",
    "@tiptap/suggestion": "^2.6.4",
    "clsx": "^2.1.1",
    "mobx": "^6.13.1",
    "mobx-react-lite": "^4.0.7",
    "prosemirror-model": "^1.22.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.6.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "env-cmd": "^10.1.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.2",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.1"
  },
  "lint-staged": {
    "*.rs": "rustfmt --edition 2021",
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  }
}
