{
  "name": "hellebore-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "db:migrate": "sea-orm-cli migrate fresh -d src-tauri/migration",
    "db:fresh": "sqlite3 src-tauri/data/db.sqlite \"VACUUM;\" && pnpm run db:migrate",
    "build:entities": "pnpm run db:fresh && sea-orm-cli generate entity -l --with-serde both -o src-tauri/entity/src",
    "build:fe": "tsc && vite build",
    "build": "tauri build",
    "test:be": "cargo test --manifest-path ./src-tauri/Cargo.toml",
    "test:fe": "vitest",
    "test": "pnpm run test:be && pnpm run test:fe",
    "preview": "vite preview",
    "dev:fe": "vite",
    "dev": "env-cmd tauri dev",
    "rustfmt": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "rustfmt:check": "cargo fmt --manifest-path src-tauri/Cargo.toml --check",
    "svelte-check": "svelte-check",
    "typecheck:fe": "tsc --noEmit && pnpm run svelte-check",
    "lint": "pnpm run eslint && pnpm run stylelint && pnpm run prettier",
    "lint:fix": "pnpm run eslint:fix && pnpm run stylelint:fix && pnpm run prettier:write",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "stylelint": "stylelint **/*.css",
    "stylelint:fix": "stylelint --fix **/*.css",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@mantine/core": "^8.3",
    "@mantine/hooks": "^8.3",
    "@mantine/tiptap": "^8.3",
    "@minoru/react-dnd-treeview": "^3.5.3",
    "@react-hook/resize-observer": "^2.0.2",
    "@tabler/icons-react": "^3.34.1",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.3.2",
    "@tauri-apps/plugin-shell": "^2.3.0",
    "@tiptap/core": "^2.26.1",
    "@tiptap/extension-link": "^2.26.1",
    "@tiptap/extension-mention": "^2.26.1",
    "@tiptap/extension-placeholder": "^2.26.1",
    "@tiptap/pm": "^2.26.1",
    "@tiptap/react": "^2.26.1",
    "@tiptap/starter-kit": "^2.26.1",
    "@tiptap/suggestion": "^2.26.1",
    "clsx": "^2.1.1",
    "consolidated-events": "^2.0.2",
    "mobx": "^6.13.7",
    "mobx-react-lite": "^4.1.0",
    "prosemirror-model": "^1.25.2",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dom": "^18.3.1",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.*",
    "@internationalized/date": "^3.11.0",
    "@lucide/svelte": "^0.564.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.7.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.7",
    "@types/consolidated-events": "^2.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.7.0",
    "bits-ui": "^2.15.5",
    "env-cmd": "^10.1.0",
    "eslint": "^9.*",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-import-resolver-vite": "^2.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.15.0",
    "espree": "^11.1.0",
    "global-jsdom": "^28.0.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-tailwindcss": "^1.0.1",
    "svelte": "^5.51.1",
    "svelte-check": "^4.4.0",
    "svelte-eslint-parser": "^1.4.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.rs": "rustfmt --edition 2024",
    "*.{ts,svelte}": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{ts,css,md}": "prettier --write"
  }
}
